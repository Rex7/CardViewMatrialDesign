<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/myCalculator"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <include
        android:id="@+id/appBar"
        layout="@layout/appbar"/>
<EditText
    android:id="@+id/inputAdd"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:elevation="4dp"
    android:maxLines="2"
    android:gravity="end|bottom"
    />
 <TextView
     android:id="@+id/ans"
     android:layout_below="@+id/inputAdd"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content" />
   <Button
       android:id="@+id/btn7"
       android:text="7"
       style="@style/Widget.AppCompat.Button.Borderless"
       android:layout_below="@+id/ans"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textSize="30sp"
       android:layout_marginTop="5dp"
       android:layout_marginLeft="30dp"/>
    <Button
        android:id="@+id/btn8"
        android:text="8"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_below="@+id/ans"
        android:layout_toRightOf="@+id/btn7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"

        />
    <Button
        android:id="@+id/btn9"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="9"
        android:layout_marginTop="5dp"
        android:textSize="30sp"
        android:layout_toRightOf="@+id/btn8"
        android:layout_below="@+id/ans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/divButton"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="/"
        android:textSize="30sp"
        android:layout_below="@+id/ans"
        android:layout_toRightOf="@+id/btn9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn4"
        android:layout_marginLeft="30dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="4"
        android:textSize="30sp"
        android:layout_below="@+id/btn7"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn5"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="5"

        android:textSize="30sp"
        android:layout_below="@+id/btn9"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/btn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn6"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="6"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/btn9"
        android:layout_toRightOf="@+id/btn5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnmul"

        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="*"
        android:textSize="30sp"
        android:layout_below="@+id/btn9"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/btn6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn1"
        android:layout_marginLeft="30dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="1"
        android:textSize="30sp"
        android:layout_below="@+id/btn4"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn2"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="2"
        android:textSize="30sp"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@+id/btn1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn3"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="3"
        android:textSize="30sp"
        android:layout_below="@+id/btn4"
        android:layout_toRightOf="@+id/btn2"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btnMinus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="-"
        android:textSize="30sp"
        android:layout_below="@+id/btn5"
        android:layout_toRightOf="@+id/btn3"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/dot"
        android:layout_marginLeft="30dp"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="."
        android:textSize="30sp"
        android:layout_below="@+id/btn1"
        android:gravity="center"

        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/btn0"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="0"
        android:textSize="30sp"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/dot"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/equal"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="="
        android:textSize="30sp"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/btn0"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/plus"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:text="+"
        android:textSize="30sp"
        android:layout_below="@+id/btn1"
        android:layout_toRightOf="@+id/equal"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/clear"
        android:text="C"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textSize="22sp"
        android:layout_below="@+id/plus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/equal"/>
</RelativeLayout>